# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/muscle_analyzer

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Firebase Configuration
FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project"}
FIREBASE_PROJECT_ID=your-firebase-project-id

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://muscle-form-analyzer.vercel.app

# Trusted Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app,*.up.railway.app

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=./uploads

# MediaPipe Configuration
MEDIAPIPE_MODEL_COMPLEXITY=1
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.7
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Railway Specific (automatically set by Railway)
# PORT=8000
# RAILWAY_ENVIRONMENT=production